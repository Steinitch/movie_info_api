.jumbotron.background
  .pull-right
    = link_to 'Search Again', root_path, class: 'btn btn-primary'




  -if @response['Response'] == 'False'
    %h2
      = "Sorry, we couldn't find any movies with the name of: #{@search_term}"
  -else
    %h1.text-centered.title=@response["Title"]
    %hr

    .container
      .row

        .col-lg-6.col-md-6
          %h3.text-centered.title Movie Info
    
          
          %table.table.table-striped.table-dark.table-bordered.table-hover.table-sm
            %tr
              %td Rated
              %td= @response['Rated'] 
            %tr.bg-primary
              %td Year Released
              %td= @response['Year'] 
            %tr
              %td Language
              %td= @response['Language'] 
            %tr.bg-primary
              %td Actors
              %td= @response['Actors'] 
            %tr
              %td Country
              %td= @response['Country'] 
            %tr
              %td Website
              %td= link_to("Click Me", @response['Website'] )
                 


        .col-lg-6.col-md-6

          - if @response['Poster'] == 'N/A'
            %h4
              = "Sorry no poster is available for #{@search_term}"
          -else
            .text-centered
              =image_tag(@response["Poster"])


